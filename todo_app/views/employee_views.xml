<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_todo_task_inherited" model="ir.ui.view">
            <field name="name">Todo Task form - Employee extension</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <field name="bank_account_id" position="before">
                    <field name="bank" />
                </field>

                <field name="address_home_id" position="before">
                    <field name="member_no" />
                </field>

                <field name="gender" position="before">
                    <field name="school" />
                    <field name="education"/>
                    <field name="political_status"/>
                    <field name="census"/>
                </field>

                <field name="user_id" position="after">
                    <field name="emergency_name" />
                    <field name="emergency_tel" />
                    <field name="remark"/>
                </field>
                <field name="work_phone" position="before">
                    <field name="qq" />
                    <field name="wechat"/>
                </field>

                <page name="hr_settings" position="after">
                    <page name="file_information" string="电子档合约">
                        <group>
                            <group string='试用期评价表' name="trail">
                                <field name="trial_attachments" widget="many2many_binary" string="Attach a file" nolabel="1" colspan="2"/>
                            </group>
                        </group>

                    </page>
                </page>

                <!--<xpath expr="//field[@name]='user_id'" position="after">-->
                <!--<field name="emergency_name" />-->
                <!--<field name="emergency_tel" />-->
                <!--<field name="emergency_contact" />-->
                <!--</xpath>-->

            </field>
        </record>
    </data>
</odoo>