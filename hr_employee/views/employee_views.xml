        <record id="hr.menu_hr_department_tree" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_user'),ref('base.group_company_user'),ref('base.group_send_company_user')])]"/>
        </record>

        <delete model="res.groups" search="[('id','=',ref('hr.group_hr_user'))]" />

        <record id="hr_contract.hr_menu_contract_type" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_user'),ref('base.group_company_user'),ref('base.group_send_company_user')])]"/>
        </record>

         <record id="hr_contract.hr_menu_contract" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_user'),ref('base.group_company_user'),ref('base.group_send_company_user'),ref('hr.group_hr_manager')])]"/>
        </record>


    </data>
</odoo>